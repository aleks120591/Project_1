<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/constr_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_hut"/>

    <TextView
        android:id="@+id/constr_title"
        android:layout_width="136dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="@string/hut"
        android:layout_alignTop="@+id/constr_image"
        android:layout_toEndOf="@+id/constr_image"/>

    <TextView
        android:text="Небольшая лачуга из палок и веток, покрытая листьями, землянка и прочие мелкие постройки, вмещают небольшую семью."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_alignBottom="@+id/constr_image"
        android:layout_toEndOf="@+id/constr_image"/>

    <Button
        android:id="@+id/building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/building"
        android:textSize="12dp"
        android:layout_below="@+id/plus_the_increase"
        android:layout_toEndOf="@+id/constr_title"/>

    <TextView
        android:id="@+id/times_building"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00:00"
        android:layout_alignBaseline="@+id/plus_the_increase"
        android:layout_alignBottom="@+id/plus_the_increase"
        android:layout_alignStart="@+id/building"
        android:layout_marginStart="17dp"/>

    <TextView
        android:id="@+id/growth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ваш прирост: "
        android:layout_marginTop="20dp"
        android:layout_below="@+id/constr_image"
        android:layout_alignEnd="@+id/constr_image"/>

    <TextView
        android:id="@+id/plus_the_increase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="После постройки: "
        android:layout_marginTop="10dp"
        android:layout_below="@+id/growth"
        android:layout_alignStart="@+id/growth"/>
</RelativeLayout>